<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:forceDarkAllowed="true"
    android:theme="@android:style/Theme.Light.NoTitleBar"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/titleText"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/museo"
        android:text="@string/title"
        android:textColor="@color/grey"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dial_Image"
        android:layout_width="366dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:srcCompat="@drawable/rectangle_2"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/background_of_the_dial_Text"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:fontFamily="@font/digitalnumbers"
        android:text="@string/background_of_the_dial"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/transparent_grey"
        android:textSize="40sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/dial_Image"
        app:layout_constraintEnd_toEndOf="@+id/dial_Image"
        app:layout_constraintStart_toStartOf="@+id/dial_Image"
        app:layout_constraintTop_toTopOf="@+id/dial_Image" />

    <TextView
        android:id="@+id/dialText"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:fontFamily="@font/digitalnumbers"
        android:textColor="@color/grey"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/dial_Image"
        app:layout_constraintEnd_toEndOf="@+id/dial_Image"
        app:layout_constraintStart_toStartOf="@+id/dial_Image"
        app:layout_constraintTop_toTopOf="@+id/dial_Image" />


    <Button
        android:onClick="digitButton"
        android:id="@+id/zeroButton"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/zero"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneButton" />


    <Button
        android:onClick="digitButton"
        android:id="@+id/oneButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/one"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourButton" />

    <Button
        android:onClick="digitButton"
        android:id="@+id/twoButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/two"
        android:textColor="@color/blue"
        android:textSize="29sp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/oneButton"
        app:layout_constraintTop_toBottomOf="@+id/fiveButton" />

    <Button
        android:onClick="digitButton"
        android:id="@+id/threeButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/three"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/twoButton"
        app:layout_constraintTop_toBottomOf="@+id/sixButton" />

    <Button
        android:onClick="digitButton"
        android:id="@+id/fourButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/four"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eightButton" />

    <Button
        android:onClick="digitButton"
        android:id="@+id/fiveButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/five"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/fourButton"
        app:layout_constraintTop_toBottomOf="@+id/sevenButton" />


    <Button
        android:onClick="digitButton"
        android:id="@+id/sixButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/six"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/fiveButton"
        app:layout_constraintTop_toBottomOf="@+id/nineButton" />

    <Button
        android:onClick="digitButton"
        android:id="@+id/sevenButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/seven"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_all_Button" />


    <Button
        android:onClick="digitButton"
        android:id="@+id/eightButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/eight"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/sevenButton"
        app:layout_constraintTop_toBottomOf="@+id/changing_the_sign_Button" />


    <Button
        android:onClick="digitButton"
        android:id="@+id/nineButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/nine"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/eightButton"
        app:layout_constraintTop_toBottomOf="@+id/percentButton" />

    <Button
        android:id="@+id/delete_all_Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/delete_all"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dial_Image" />


    <Button
        android:id="@+id/changing_the_sign_Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/changing_the_sign"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/delete_all_Button"
        app:layout_constraintTop_toBottomOf="@+id/dial_Image" />

    <Button
        android:id="@+id/percentButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/percent"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/changing_the_sign_Button"
        app:layout_constraintTop_toBottomOf="@+id/dial_Image" />


    <Button
        android:onClick="commandButton"
        android:id="@+id/divideButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/divide"
        android:textColor="@color/white"
        android:textSize="43sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toEndOf="@+id/percentButton"
        app:layout_constraintTop_toBottomOf="@+id/dial_Image" />


    <Button
        android:onClick="commandButton"
        android:id="@+id/multiplyButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/multiply"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nineButton"
        app:layout_constraintTop_toBottomOf="@+id/divideButton" />


    <Button
        android:onClick="commandButton"
        android:id="@+id/minusButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/minus"
        android:textColor="@color/white"
        android:textSize="43sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sixButton"
        app:layout_constraintTop_toBottomOf="@+id/multiplyButton" />


    <Button
        android:onClick="commandButton"
        android:id="@+id/plusButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/plus"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/threeButton"
        app:layout_constraintTop_toBottomOf="@+id/minusButton" />


    <Button
        android:onClick="commandButton"
        android:id="@+id/equalButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/equal"
        android:textColor="@color/white"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commaButton"
        app:layout_constraintTop_toBottomOf="@+id/plusButton" />


    <Button
        android:onClick="commandButton"
        android:id="@+id/commaButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/comma"
        android:textColor="@color/blue"
        android:textSize="29sp"
        android:translationZ="5dp"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/zeroButton"
        app:layout_constraintTop_toBottomOf="@+id/oneButton" />

</androidx.constraintlayout.widget.ConstraintLayout>